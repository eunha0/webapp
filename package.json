{
  "name": "webapp",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:sandbox": "wrangler pages dev dist --d1=webapp-production --local --ip 0.0.0.0 --port 3000",
    "build": "vite build && echo '{\"version\":1,\"include\":[\"/*\"],\"exclude\":[\"/static/*\",\"/rubric-pdfs/*\",\"/exam-questions/*\",\"/guide-screenshots/*\",\"/rubric-docs/*\",\"/rubric-files/*\"]}' > dist/_routes.json",
    "preview": "wrangler pages dev",
    "deploy": "npm run build && wrangler pages deploy",
    "deploy:prod": "npm run build && wrangler pages deploy dist --project-name webapp",
    "cf-typegen": "wrangler types --env-interface CloudflareBindings",
    "db:migrate:local": "wrangler d1 migrations apply webapp-production --local",
    "db:migrate:prod": "wrangler d1 migrations apply webapp-production",
    "db:reset": "rm -rf .wrangler/state/v3/d1 && npm run db:migrate:local",
    "clean-port": "fuser -k 3000/tcp 2>/dev/null || true",
    "test": "curl http://localhost:3000",
    "lint": "eslint src/**/*.{ts,tsx,js,mjs}",
    "lint:fix": "eslint src/**/*.{ts,tsx,js,mjs} --fix",
    "lint:report": "eslint src/**/*.{ts,tsx,js,mjs} -f json -o eslint-report.json || echo 'Lint completed with warnings'"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@types/bcryptjs": "^2.4.6",
    "bcryptjs": "^3.0.3",
    "dompurify": "^3.3.1",
    "hono": "^4.10.4",
    "mime-types": "^3.0.1",
    "openai": "^6.10.0",
    "pdfjs-dist": "^4.10.38",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@hono/vite-build": "^1.2.0",
    "@hono/vite-dev-server": "^0.18.2",
    "@playwright/test": "^1.57.0",
    "@types/dompurify": "^3.0.5",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9.39.2",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-no-secrets": "^2.2.1",
    "eslint-plugin-security": "^3.0.1",
    "jscpd": "^4.0.5",
    "playwright": "^1.57.0",
    "vite": "^6.3.5",
    "wrangler": "^4.4.0"
  }
}
