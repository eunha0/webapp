{
  "threshold": 0,
  "reporters": ["html", "markdown", "console"],
  "ignore": [
    "node_modules/**",
    "dist/**",
    ".git/**",
    ".wrangler/**",
    "**/*.min.js",
    "**/*.map",
    "uploaded_files/**",
    "public/rubric-pdfs/**"
  ],
  "format": ["typescript", "javascript", "tsx"],
  "min-lines": 5,
  "min-tokens": 50,
  "output": "./code-analysis",
  "mode": "strict",
  "absolute": true,
  "verbose": true
}
